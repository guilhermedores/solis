# =============================================================================
# ARQUIVO DE EXEMPLO - VARIÁVEIS DE AMBIENTE
# =============================================================================
# Copie este arquivo para .env e preencha com seus valores
# NÃO commite o arquivo .env no Git!
# =============================================================================

# Ambiente de execução
NODE_ENV=development
DOTNET_ENV=Development

# =============================================================================
# BANCO DE DADOS POSTGRESQL
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=solis_pdv
DB_USER=solis_user
DB_PASSWORD=ALTERE_ESTA_SENHA_EM_PRODUCAO

# =============================================================================
# API NUVEM (Backend)
# =============================================================================
API_PORT=3000

# JWT - JSON Web Token
# IMPORTANTE: Use uma chave longa e aleatória em produção!
# Gere com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=ALTERE_ESTA_CHAVE_SECRETA_MINIMO_32_CARACTERES
JWT_EXPIRES_IN=24h

# Chave para integrações externas
API_KEY=your-api-key-for-external-integrations

# CORS - Allowed Origins
# Em produção, especifique os domínios permitidos
CORS_ORIGIN=*

# =============================================================================
# AGENTE PDV (.NET)
# =============================================================================
AGENTE_PORT=5000

# Intervalo de sincronização (em segundos)
SYNC_INTERVAL=300

# Configurações de Periféricos
IMPRESSORA_TERMICA_ENABLED=true
IMPRESSORA_TERMICA_PORT=COM1

GAVETA_ENABLED=true

TEF_ENABLED=false
TEF_IP=192.168.1.100
TEF_PORT=60906

SAT_ENABLED=false
SAT_CODIGO_ATIVACAO=123456789

# =============================================================================
# APLICAÇÃO PWA (Caixa/PDV)
# =============================================================================
PWA_PORT=8080

# =============================================================================
# APLICAÇÃO ADMIN (Web Administrativa)
# =============================================================================
ADMIN_PORT=8081

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =============================================================================
# Chave de criptografia (32 caracteres)
# Gere com: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=ALTERE_ESTA_CHAVE_32_CHARS_LONG

# Salt rounds para bcrypt (10-12 recomendado)
SALT_ROUNDS=10

# =============================================================================
# CONFIGURAÇÕES DE UPLOAD
# =============================================================================
MAX_FILE_SIZE=5MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# =============================================================================
# LOGS
# =============================================================================
# Níveis: error, warn, info, debug
LOG_LEVEL=info
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# =============================================================================
# BACKUP E SINCRONIZAÇÃO
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY=5000

# =============================================================================
# SMTP (Email) - Opcional
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-de-aplicativo
SMTP_FROM=noreply@solis.com

# =============================================================================
# INTEGRAÇÃO EXTERNA - Opcional
# =============================================================================
# API de CEP
VIACEP_URL=https://viacep.com.br/ws

# Webhook para notificações
WEBHOOK_URL=

# =============================================================================
# MONITORAMENTO - Opcional
# =============================================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# =============================================================================
# RECURSOS AVANÇADOS - Futuro
# =============================================================================
# Redis (quando implementado)
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=

# RabbitMQ (quando implementado)
# RABBITMQ_HOST=rabbitmq
# RABBITMQ_PORT=5672
# RABBITMQ_USER=
# RABBITMQ_PASSWORD=